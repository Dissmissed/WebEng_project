<%= form_for([@book, @chunk]) do |f| %>
    <% if @chunk.errors.any? %>
        <div id="error_explanation">
          <h2><%= t 'activerecord.errors.template.header', :model => Chunk.model_name.human, :count => @chunk.errors.count %></h2>

          <ul>
            <% @chunk.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.hidden_field :original_updated_at %>

    <div class="field input-group">
      <%= f.label :title %>
      <br/>
      <%= f.text_field :title, :class => "form-control" %>
    </div>
    <div class="field input-group">
      <%= f.label :section %>
      <br/>
      <%= f.text_field :section, :class => "form-control" %>
    </div>
    <div class="field input-group">
      <%= f.label :user %>
      <br/>
      <%= f.collection_select(:user_id, User.all, :id, :username) %>
    </div>
    <div class="field input-group">
      <%= f.cktext_area :content, :class => "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit :class => "btn btn-success" %>
    </div>
<% end %>
