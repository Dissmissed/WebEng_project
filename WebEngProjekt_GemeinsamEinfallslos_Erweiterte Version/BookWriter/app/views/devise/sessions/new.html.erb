<div class="col-md-3"></div>
<div class="col-md-9">
    <h2><%= t('.sign_in', :default => "Sign in") %></h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <br>
      <div class="input-group"><%= f.label :login %>
      <%= f.text_field :login, :class => "form-control" %></div><br>

      <div class="input-group"><%= f.label :password %>
      <%= f.password_field :password, :class =>"form-control" %></div><br>

      <!--<% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me, t('.remember_me', :default => "Remember me") %></div><br>
      <% end -%>-->

      <div><%= f.submit t('.sign_in', :default => "Sign in"), :class => "btn btn-success" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>