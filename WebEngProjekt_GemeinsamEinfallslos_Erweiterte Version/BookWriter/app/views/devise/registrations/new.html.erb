<h2><%= t('.sign_up', :default => "Sign up") %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-group"><%= f.label :first_name %><br/>
  <%= f.text_field :first_name, :autofocus => true, :class => "form-control" %></div>

  <div class="input-group"><%= f.label :last_name %><br/>
  <%= f.text_field :last_name, :class => "form-control" %></div>

  <div class="input-group"><%= f.label :username %><br />
  <%= f.text_field :username, :class => "form-control" %></div>

  <div class="input-group"><%= f.label :email %><br />
  <%= f.email_field :email, :class => "form-control" %></div>

  <div class="input-group"><%= f.label :password %><br />
  <%= f.password_field :password, :class => "form-control" %></div>

  <div class="input-group"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :class => "form-control" %></div>

  <div><br/><%= f.submit t('.sign_up', :default => "Sign up"), :class => "btn btn-success" %></div>
<% end %>

<%= render "devise/shared/links" %>
